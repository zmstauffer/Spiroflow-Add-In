<Window x:Class="SpiroflowAddIn.Button_Forms.ChangeSettingsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpiroflowAddIn.Button_Forms"
             d:DataContext="clr-namespace:Spiroflow_Add-In.Buttons.ShowSettingsWindowButton"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             WindowStyle="None"
             WindowStartupLocation="CenterScreen"
             SizeToContent="WidthAndHeight"
             ResizeMode="NoResize"
             Background="Transparent"
             AllowsTransparency="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary 
                    Source="/SpiroflowAddIn;component/StyleTemplates/Styles.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0"  Content="BOM Export Path:" Margin="10"></Label>
            <Button Grid.Row="0" Grid.Column="1" x:Name="BOMExportButton" Content="{Binding Path=BOMExportPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Click="BOMExportButton_OnClick"  Margin="10" Style="{DynamicResource RoundedButtonStyle}"></Button>

            <Label Grid.Row="1" Grid.Column="0"  Content="Drawing Export Path:" Margin="10"></Label>
            <Button Grid.Row="1" Grid.Column="1"   x:Name="DrawingExportButton" Content="{Binding Path=DrawingExportPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Click="DrawingExportButton_OnClick"  Margin="10" Style="{DynamicResource RoundedButtonStyle}"></Button>

            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button  x:Name="SaveButton" Content ="Save" Width="100" Click="SaveButton_OnClick" Margin="10" Style="{DynamicResource RoundedButtonStyle}"></Button>
                <Button x:Name="CancelButton" Content ="Cancel" Width="100" Click="CancelButton_OnClick" Margin="10" Style="{DynamicResource RoundedButtonStyle}"></Button>
            </StackPanel>

        </Grid>
    </Border>

